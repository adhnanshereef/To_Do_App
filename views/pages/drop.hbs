<section class="padding-top bg">
  <div class="container">
    {{#if drop}}
      <h3 class="text-center gradient-text" style="font-size: 25px;" >Done</h3>
      <button
        onclick="deleteAllDrop()"
        class="button-outline-danger mt-5 mb-5"
        style="width: 100%;"
      >Delete all</button>
      {{#each drop}}
        <div class="outline mb-3">
          <p class="float-end">Data: {{this.date}}</p>
          <button
            onclick="deleteDroped('{{this._id}}')"
            class="button-outline-danger"
            style="width: 150px;"
          >Delete</button>
          <ol class="mt-5 box-done">
            {{#each this.program}}
              <li class="mt-3">
                <p>{{this.text}}</p>
              </li>
            {{/each}}
          </ol>
        </div>
      {{/each}}
    {{else}}
      <h3 class="text-center"><i class="fas fa-folder-open"></i> Empty</h3>
    {{/if}}
  </div>
  <div class="mixture"></div>
</section>